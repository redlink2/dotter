
" Personal Remaps
" nnoremap <leader>h :wincmd h<CR> "
" nnoremap <leader>j :wincmd j<CR> "
" nnoremap <leader>k :wincmd k<CR> "
" nnoremap <leader>l :wincmd l<CR> "

"Shift + Tab does inverse tab"
inoremap <S-Tab> <C-d>

" source vimrc on ',``'
nnoremap <leader>` :source $MYVIMRC<CR>

"quicksave/quit with F2/F3"
nnoremap <F1> :wq<CR>
nnoremap <F2> :w<CR>
nnoremap <F3> :q<CR>

"reload current doc for changes"
nnoremap <F4> :edit<CR>

"quick nav the buffer with F5/F6"
nnoremap <F5> :bprevious<CR>
nnoremap <F6> :bnext<CR>

"close error window with <F9>"
nnoremap <F9> :lclose<CR>

"Toggle highlighted search with  
set hlsearch!
nnoremap <F10> :set hlsearch!<CR>

" yanks from cursor to eol "
noremap Y y$



" Defaults / inits

" Nvim
"Enable mouse click for nvim
set mouse=a
"Fix cursor replacement after closing nvim"
"set guicursor=a


"NERDtree
"NERDtree remaps"
nnoremap <leader>n :NERDTreeFocus<CR>
nnoremap <C-t> :NERDTreeToggle<CR>
"See invisible characters
set list listchars=tab:>\ ,trail:+,eol:$

"Deoplete init 
"let g:deoplete#enable_at_startup = 1

"enable indent-guides by default"
let g:indent_guides_enable_on_vim_startup = 1
autocmd VimEnter,Colorscheme * :hi IndentGuidesOdd ctermbg=black
autocmd VimEnter,Colorscheme * :hi IndentGuidesEven ctermbg=darkgrey

nnoremap <leader>ff <cmd>Telescope find_files<cr>
nnoremap <leader>fg <cmd>Telescope live_grep<cr>
nnoremap <leader>fb <cmd>Telescope buffers<cr>
nnoremap <leader>fh <cmd>Telescope help_tags<cr>
